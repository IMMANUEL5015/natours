extends base

block content
    // CONTENT
    p Hi #{name},
    p Forgot your password? Please click on this link: #{url}
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reset your password
    p - If you did not make a request to reset your password, please ignore this email.